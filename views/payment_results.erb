<html>

<h1> Payment Results </h1>

<body>
  <div>
    <dl>
      <dt>
        APR
      </dt>
      <dd>
        <%= @apr.to_fs(:percentage, {:precision => 4}) %>
      </dd>

      <dt>
        Number of years
      </dt>
      <dd>
        <%= @num_years %>
      </dd>
    </dl>

     <dt>
        Principal
      </dt>
      <dd>
        <%= @principal.to_fs(:currency) %>
      </dd>
    </dl>

     <dt>
        Payment
      </dt>
      <dd>
        <%= @payment.to_fs(:currency) %>
      </dd>
    </dl>

  </div>

  <div>
    <a href="/payment/new">Calculate another payment</a>
  </div>

</body>
</html>
